<?xml version="1.0"?>
<config>
    <default>
        <payment>
            <oxipayments>
                <gateway_base_url>http://localhost:60343</gateway_base_url>
                <gateway_checkout_url>/Checkout/Process?platform=Magento</gateway_checkout_url>
                <merchant_number>30166666</merchant_number>
                <api_key>TEST</api_key>
                <test_mode>1</test_mode>
            </oxipayments>
        </payment>
    </default>
    <sections>
        <payment>
            <groups>
                <oxipayments translate="label" module="oxipayments">
                    <label>Oxipay Checkout</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>0</sort_order>
                        </active>
                        <merchant_number translate="label">
                            <label>Merchant Number</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>1</sort_order>
                        </merchant_number>
                        <api_key translate="label">
                            <label>API Key</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>2</sort_order>
                        </api_key>
                        <test_mode translate="label">
                            <label>Test Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>3</sort_order>
                        </test_mode>
                        <gateway_base_url translate="label">
                            <label>Gateway Base URL (please do not change unless directed by Oxipay staff)</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>4</sort_order>
                        </gateway_base_url>
                        <gateway_checkout_url translate="label">
                            <label>Gateway URL (please do not change unless directed by Oxipay staff)</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>5</sort_order>
                        </gateway_checkout_url>
                        <order_status translate="label">
                            <label>New order status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>6</sort_order>
                        </order_status>
                    </fields>
                </oxipayments>
            </groups>
        </payment>
    </sections>
</config>